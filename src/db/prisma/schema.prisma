generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id              Int          @id @default(autoincrement())
  name            String       @unique
  description     String
  category        String
  totalInvestment Float        @default(0)
  revenue         Float        @default(0)
  employees       Float        @default(0)
  selectedCompany Int          @default(0)
  comparedCompany Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  imageUrl        String?
  investment      Investment[]
}

model Investment {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  amount    Float
  comment   String
  updateAt  DateTime @updatedAt
  createdAt DateTime @default(now())
  Company   Company? @relation(fields: [companyId], references: [id]) // TODO: onDelete Cascade 적용하는 게 좋을 듯
  companyId Int?
}
